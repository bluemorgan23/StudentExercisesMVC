@model StudentExercisesMVC.Models.ViewModels.StudentEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Student</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Student.FirstName" class="control-label"></label>
                <input asp-for="@Model.Student.FirstName" class="form-control" />
                <span asp-validation-for="@Model.Student.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Student.LastName" class="control-label"></label>
                <input asp-for="@Model.Student.LastName" class="form-control" />
                <span asp-validation-for="@Model.Student.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Student.Slack" class="control-label"></label>
                <input asp-for="@Model.Student.Slack" class="form-control" />
                <span asp-validation-for="@Model.Student.Slack" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Student.CohortId" class="control-label"></label>
                <select asp-for="@Model.Student.CohortId" asp-items="@Model.Cohorts" class="form-control"></select>
                <span asp-validation-for="@Model.Student.CohortId" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.DropDownListFor(m => m.SelectedValues, Model.Exercises, new { multiple = "true" })
            </div>
            <div class="form-group">
                <input type="submit" asp-controller="Students" asp-action="Edit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
